---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import { SITE, SOCIAL, CERTIFICATIONS, COMMUNITIES, STATS } from "@/lib/constants";

const lang = 'en';

const socialLinks = [
  { href: SOCIAL.github, icon: "mdi:github", label: "GitHub", handle: "@jeanlopezxyz" },
  { href: SOCIAL.linkedin, icon: "mdi:linkedin", label: "LinkedIn", handle: "jean-paul-lopez" },
  { href: SOCIAL.twitter, icon: "mdi:twitter", label: "X", handle: "@jeanlopezxyz" },
];

// English translations for communities
const communitiesEn = COMMUNITIES.map(c => ({
  ...c,
  role: c.role === 'Co-Organizador' ? 'Co-Organizer' : 'Program Manager'
}));
---

<BaseLayout
  title="About"
  description={`Learn more about ${SITE.author} and the blog blog.labjp.xyz`}
  lang={lang}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12 lg:py-16">

    <!-- Hero Section -->
    <header class="text-center mb-12">
      <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center ring-2 ring-primary/20">
        <Icon name="mdi:account" class="w-12 h-12 text-primary" />
      </div>
      <h1 class="text-3xl lg:text-4xl font-bold tracking-tight mb-2">
        {SITE.author}
      </h1>
      <p class="text-lg text-muted-foreground">
        Senior Consultant @ <span class="text-[#EE0000] font-medium">Red Hat</span>
      </p>
      <p class="text-sm text-muted-foreground mt-1">
        Peru
      </p>
    </header>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
      <div class="text-center p-4 rounded-xl bg-card/50 border border-border/50">
        <div class="text-2xl font-bold text-primary">{STATS.yearsExperience}+</div>
        <div class="text-xs text-muted-foreground uppercase tracking-wide">Years Experience</div>
      </div>
      <div class="text-center p-4 rounded-xl bg-card/50 border border-border/50">
        <div class="text-2xl font-bold text-primary">{STATS.certifications}</div>
        <div class="text-xs text-muted-foreground uppercase tracking-wide">Certifications</div>
      </div>
      <div class="text-center p-4 rounded-xl bg-card/50 border border-border/50">
        <div class="text-2xl font-bold text-primary">{STATS.projectsDelivered}+</div>
        <div class="text-xs text-muted-foreground uppercase tracking-wide">Projects</div>
      </div>
      <div class="text-center p-4 rounded-xl bg-card/50 border border-border/50">
        <div class="text-2xl font-bold text-primary">{STATS.communitySpeaks}+</div>
        <div class="text-xs text-muted-foreground uppercase tracking-wide">Talks</div>
      </div>
    </div>

    <!-- About Section -->
    <section class="mb-12">
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <Icon name="mdi:account-outline" class="w-5 h-5 text-primary" />
        About Me
      </h2>
      <div class="prose prose-lg max-w-none text-muted-foreground space-y-4">
        <p>
          I'm Jean Paul Lopez, Senior Consultant at Red Hat with over 8 years in enterprise software.
          I help companies adopt Kubernetes, OpenShift, and cloud native architectures.
        </p>
        <p>
          Everything I share here is in a personal capacity. This blog is my working notebook for modern architecture.
        </p>
      </div>
    </section>

    <!-- About the Blog -->
    <section class="mb-12">
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <Icon name="mdi:post-outline" class="w-5 h-5 text-primary" />
        About the Blog
      </h2>
      <div class="prose prose-lg max-w-none text-muted-foreground space-y-4">
        <p>
          <strong class="text-foreground">blog.labjp.xyz</strong> documents how cloud native architecture evolves in enterprise environments.
          It's a growing map of patterns that help large systems evolve without breaking.
        </p>
        <p>The focus is on:</p>
        <ul class="space-y-1">
          <li>Kubernetes and OpenShift for enterprise environments</li>
          <li>Cloud native architectures and pragmatic design decisions</li>
          <li>AI systems integrated with Java</li>
          <li>Developer experience as a design constraint</li>
        </ul>
      </div>
    </section>

    <!-- Certifications -->
    <section class="mb-12">
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <Icon name="mdi:certificate-outline" class="w-5 h-5 text-primary" />
        Certifications
      </h2>
      <div class="flex flex-wrap gap-2">
        {CERTIFICATIONS.map((cert) => (
          <div
            class="group relative px-3 py-2 rounded-lg bg-card/50 border border-border/50 hover:border-primary/50 transition-colors cursor-default"
            title={cert.fullName}
          >
            <span class="font-mono font-bold text-sm text-foreground">{cert.name}</span>
            <span class="text-xs text-muted-foreground ml-1">â€¢ {cert.issuer}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Communities -->
    <section class="mb-12">
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <Icon name="mdi:account-group-outline" class="w-5 h-5 text-primary" />
        Communities
      </h2>
      <div class="grid sm:grid-cols-2 gap-4">
        {communitiesEn.map((community) => (
          <a
            href={community.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-4 p-4 rounded-xl bg-card/50 border border-border/50 hover:border-primary/50 hover:bg-card/80 transition-all group"
          >
            <div class="w-12 h-12 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
              <Icon
                name={community.logo === 'kubernetes' ? 'simple-icons:kubernetes' : 'simple-icons:cncf'}
                class="w-6 h-6 text-primary"
              />
            </div>
            <div>
              <div class="font-semibold text-foreground group-hover:text-primary transition-colors">
                {community.name}
              </div>
              <div class="text-sm text-muted-foreground">{community.role}</div>
            </div>
            <Icon name="mdi:open-in-new" class="w-4 h-4 text-muted-foreground ml-auto opacity-0 group-hover:opacity-100 transition-opacity" />
          </a>
        ))}
      </div>
    </section>

    <!-- Connect -->
    <section>
      <h2 class="text-xl font-bold mb-4 flex items-center gap-2">
        <Icon name="mdi:link-variant" class="w-5 h-5 text-primary" />
        Connect
      </h2>
      <div class="grid sm:grid-cols-3 gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 p-4 rounded-xl bg-card/50 border border-border/50 hover:border-primary/50 hover:bg-card/80 transition-all group"
          >
            <Icon name={link.icon} class="w-6 h-6 text-muted-foreground group-hover:text-primary transition-colors" />
            <div>
              <div class="text-sm font-medium text-foreground">{link.label}</div>
              <div class="text-xs text-muted-foreground">{link.handle}</div>
            </div>
          </a>
        ))}
      </div>

      <!-- RSS -->
      <div class="mt-4">
        <a
          href="/rss.xml"
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg text-sm text-muted-foreground hover:text-primary transition-colors"
        >
          <Icon name="mdi:rss" class="w-5 h-5" />
          Subscribe via RSS
        </a>
      </div>
    </section>

  </div>
</BaseLayout>
