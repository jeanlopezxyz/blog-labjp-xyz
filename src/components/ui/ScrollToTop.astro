---
/**
 * ScrollToTop Component
 * Shows a button to scroll back to top when scrolled down
 */
import { Icon } from "astro-icon/components";
---

<button
  id="scroll-to-top"
  class="fixed bottom-6 right-6 z-40 p-3 bg-primary text-primary-foreground rounded-full shadow-lg opacity-0 invisible translate-y-4 transition-all duration-300 hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
  aria-label="Scroll to top"
>
  <Icon name="mdi:chevron-up" class="w-5 h-5" />
</button>

<script>
  function initScrollToTop() {
    const button = document.getElementById('scroll-to-top');
    if (!button) return;

    const toggleVisibility = () => {
      const scrollY = window.scrollY;
      const threshold = 400;

      if (scrollY > threshold) {
        button.classList.remove('opacity-0', 'invisible', 'translate-y-4');
        button.classList.add('opacity-100', 'visible', 'translate-y-0');
      } else {
        button.classList.add('opacity-0', 'invisible', 'translate-y-4');
        button.classList.remove('opacity-100', 'visible', 'translate-y-0');
      }
    };

    const scrollToTop = () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    };

    // Throttle scroll event
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          toggleVisibility();
          ticking = false;
        });
        ticking = true;
      }
    });

    button.addEventListener('click', scrollToTop);

    // Initial check
    toggleVisibility();
  }

  initScrollToTop();
  document.addEventListener('astro:after-swap', initScrollToTop);
</script>
